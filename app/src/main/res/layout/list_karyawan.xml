<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageButton
            android:id="@+id/imgBtnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/cardview_light_background"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageView
            android:id="@+id/daftar_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtEmpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_alignTop="@+id/daftar_icon"
            android:text="Nama karyawan"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmpName"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/daftar_icon"
            android:ellipsize="end"
            android:orientation="horizontal"
            android:singleLine="true">

            <TextView
                android:id="@+id/txtEmpDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txtEmpDev"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="|"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtPTName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txtPTName"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="12sp" />


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>