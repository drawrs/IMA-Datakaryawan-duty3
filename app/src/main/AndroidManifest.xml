<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="khilman.example.datakaryawan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Beranda"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login Aplikasi"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register Akun"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ListKaryawan" android:label="Daftar Karyawan" android:parentActivityName=".MainActivity"/>
        <activity android:name=".ListUser" android:label="Daftar Pengguna" android:parentActivityName=".MainActivity"/>
        <activity android:name=".TambahKaryawan" android:label="Tambah Data Karyawan" android:parentActivityName=".MainActivity"/>
        <activity android:name=".DetailKaryawan" android:label="Detail Karyawan" android:parentActivityName=".ListKaryawan"></activity>
    </application>

</manifest>